{
  "name": "grok-cli",
  "version": "2.0.0",
  "description": "Grok CLI MCP Server - Advanced AI Development Copilot",
  "server": {
    "command": "node",
    "args": ["server.js"],
    "env": {
      "NODE_ENV": "production"
    }
  },
  "tools": [
    {
      "name": "analyze_project",
      "description": "Analyze complete project structure, dependencies, and code",
      "inputSchema": {
        "type": "object",
        "properties": {
          "project_path": {
            "type": "string",
            "description": "Path to project directory (optional, defaults to current)"
          }
        }
      }
    },
    {
      "name": "execute_command",
      "description": "Execute shell command safely (with sandbox option)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Command to execute"
          },
          "use_sandbox": {
            "type": "boolean",
            "description": "Execute in Docker sandbox for safety",
            "default": true
          },
          "working_dir": {
            "type": "string",
            "description": "Working directory for command"
          }
        },
        "required": ["command"]
      }
    },
    {
      "name": "generate_code",
      "description": "Generate code based on description using AI",
      "inputSchema": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Description of code to generate"
          },
          "language": {
            "type": "string",
            "description": "Programming language (python, javascript, etc.)",
            "default": "python"
          },
          "context": {
            "type": "string",
            "description": "Additional context for generation"
          }
        },
        "required": ["description"]
      }
    },
    {
      "name": "fix_code",
      "description": "Automatically fix code based on error message",
      "inputSchema": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "Code with errors"
          },
          "error": {
            "type": "string",
            "description": "Error message"
          },
          "language": {
            "type": "string",
            "description": "Programming language",
            "default": "python"
          }
        },
        "required": ["code", "error"]
      }
    },
    {
      "name": "run_tests",
      "description": "Run all tests and return results with diagnostics",
      "inputSchema": {
        "type": "object",
        "properties": {
          "project_path": {
            "type": "string",
            "description": "Path to project directory"
          }
        }
      }
    },
    {
      "name": "search_memory",
      "description": "Search through Grok CLI memory (short and long-term)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "category": {
            "type": "string",
            "description": "Filter by category (optional)"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "search_project",
      "description": "Search project using RAG (vector similarity)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "top_k": {
            "type": "number",
            "description": "Number of results to return",
            "default": 5
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "get_diagnostics",
      "description": "Get project diagnostics and health status",
      "inputSchema": {
        "type": "object",
        "properties": {
          "project_path": {
            "type": "string",
            "description": "Path to project directory"
          }
        }
      }
    }
  ],
  "api": {
    "endpoint": "http://localhost:8100",
    "timeout": 30000
  }
}
