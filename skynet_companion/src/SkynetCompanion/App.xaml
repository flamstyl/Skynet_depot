<Application
    x:Class="SkynetCompanion.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Color Resources -->
            <SolidColorBrush x:Key="SkynetAccentBrush" Color="#6366F1"/>
            <SolidColorBrush x:Key="SkynetBackgroundBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="SkynetTextBrush" Color="#E5E7EB"/>
            <SolidColorBrush x:Key="SkynetBorderBrush" Color="#374151"/>
            <SolidColorBrush x:Key="SkynetSuccessBrush" Color="#10B981"/>
            <SolidColorBrush x:Key="SkynetErrorBrush" Color="#EF4444"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
