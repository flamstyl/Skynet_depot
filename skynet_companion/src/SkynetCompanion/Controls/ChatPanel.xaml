<UserControl
    x:Class="SkynetCompanion.Controls.ChatPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Agent Selector -->
            <RowDefinition Height="*"/>    <!-- Messages -->
            <RowDefinition Height="Auto"/> <!-- Input -->
        </Grid.RowDefinitions>

        <!-- Agent Selector -->
        <Grid Grid.Row="0" Background="#252525" Padding="12,8">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock
                    Text="Agent:"
                    Foreground="#9CA3AF"
                    VerticalAlignment="Center"
                    FontSize="12"/>
                <ComboBox
                    x:Name="AgentSelector"
                    Width="150"
                    SelectionChanged="AgentSelector_SelectionChanged">
                    <ComboBoxItem Content="ðŸ¤– Claude" IsSelected="True" Tag="claude"/>
                    <ComboBoxItem Content="ðŸ’¬ ChatGPT" Tag="gpt"/>
                    <ComboBoxItem Content="âœ¨ Gemini" Tag="gemini"/>
                    <ComboBoxItem Content="ðŸ” Comet" Tag="comet"/>
                </ComboBox>

                <TextBlock
                    x:Name="AgentStatusText"
                    Text="â— Connected"
                    Foreground="#10B981"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Messages ScrollViewer -->
        <ScrollViewer
            Grid.Row="1"
            x:Name="MessagesScrollViewer"
            VerticalScrollBarVisibility="Auto"
            Padding="12">

            <StackPanel x:Name="MessagesPanel" Spacing="12">
                <!-- Messages will be added here dynamically -->
                <Border
                    Background="#2D2D30"
                    CornerRadius="8"
                    Padding="12"
                    HorizontalAlignment="Left"
                    MaxWidth="320">
                    <StackPanel>
                        <TextBlock
                            Text="Assistant"
                            FontSize="11"
                            Foreground="#9CA3AF"
                            Margin="0,0,0,4"/>
                        <TextBlock
                            Text="Hello! I'm your Skynet Companion. How can I help you today?"
                            FontSize="13"
                            Foreground="#E5E7EB"
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Input Area -->
        <Grid Grid.Row="2" Background="#252525" Padding="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="MessageInput"
                Grid.Column="0"
                PlaceholderText="Type your message..."
                Background="#1E1E1E"
                Foreground="#E5E7EB"
                BorderBrush="#374151"
                Padding="12,8"
                CornerRadius="6"
                KeyDown="MessageInput_KeyDown"/>

            <Button
                x:Name="SendButton"
                Grid.Column="1"
                Content="Send"
                Click="SendButton_Click"
                Background="#6366F1"
                Foreground="White"
                Padding="20,8"
                Margin="8,0,0,0"
                CornerRadius="6"/>
        </Grid>
    </Grid>
</UserControl>
