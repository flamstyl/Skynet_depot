<UserControl
    x:Class="SkynetCompanion.Controls.QuickActions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#1E1E1E" Padding="16">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <!-- Clipboard Preview -->
                <Border
                    Background="#252525"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock
                            Text="ðŸ“‹ Clipboard"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#E5E7EB"/>

                        <TextBlock
                            x:Name="ClipboardPreview"
                            Text="(nothing copied yet)"
                            FontSize="12"
                            Foreground="#9CA3AF"
                            TextWrapping="Wrap"
                            MaxLines="3"
                            TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Grid -->
                <TextBlock
                    Text="âš¡ Quick Actions"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#E5E7EB"
                    Margin="0,8,0,0"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 1 -->
                    <Button
                        Grid.Row="0" Grid.Column="0"
                        Content="ðŸ“ Summarize"
                        Click="SummarizeButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,0,4,8"/>

                    <Button
                        Grid.Row="0" Grid.Column="1"
                        Content="ðŸŒ Translate"
                        Click="TranslateButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="4,0,0,8"/>

                    <!-- Row 2 -->
                    <Button
                        Grid.Row="1" Grid.Column="0"
                        Content="ðŸ’¡ Explain"
                        Click="ExplainButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,0,4,8"/>

                    <Button
                        Grid.Row="1" Grid.Column="1"
                        Content="âœ¨ Improve"
                        Click="ImproveButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="4,0,0,8"/>

                    <!-- Row 3 -->
                    <Button
                        Grid.Row="2" Grid.Column="0"
                        Content="ðŸ’» Code"
                        Click="CodeButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,0,4,8"/>

                    <Button
                        Grid.Row="2" Grid.Column="1"
                        Content="ðŸ” Analyze"
                        Click="AnalyzeButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="4,0,0,8"/>
                </Grid>

                <!-- Result Area -->
                <Border
                    x:Name="ResultBorder"
                    Background="#252525"
                    CornerRadius="8"
                    Padding="16"
                    Visibility="Collapsed">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                x:Name="ResultTitle"
                                Text="Result"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="#E5E7EB"/>

                            <ProgressRing
                                x:Name="ActionProgressRing"
                                Width="16"
                                Height="16"
                                IsActive="False"
                                Visibility="Collapsed"/>
                        </StackPanel>

                        <TextBlock
                            x:Name="ResultText"
                            Text=""
                            FontSize="12"
                            Foreground="#D1D5DB"
                            TextWrapping="Wrap"/>

                        <Button
                            Content="Copy Result"
                            Click="CopyResultButton_Click"
                            Background="#374151"
                            Foreground="White"
                            Padding="12,6"
                            CornerRadius="4"
                            HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>

    <!-- TODO: Add ActionButtonStyle to resources -->
</UserControl>
