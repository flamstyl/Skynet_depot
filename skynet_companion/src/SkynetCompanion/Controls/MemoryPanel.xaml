<UserControl
    x:Class="SkynetCompanion.Controls.MemoryPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#1E1E1E" Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Search -->
            <RowDefinition Height="*"/>    <!-- Memories List -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
            <TextBlock
                Text="ðŸ§  Memory"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#E5E7EB"
                VerticalAlignment="Center"/>

            <TextBlock
                x:Name="MemoryCountText"
                Text="(0 entries)"
                FontSize="12"
                Foreground="#9CA3AF"
                VerticalAlignment="Center"/>

            <Button
                Content="Clear All"
                Click="ClearAllButton_Click"
                Background="#EF4444"
                Foreground="White"
                Padding="12,6"
                CornerRadius="4"
                FontSize="11"
                HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Search Box -->
        <TextBox
            Grid.Row="1"
            x:Name="SearchBox"
            PlaceholderText="Search memories..."
            Background="#252525"
            Foreground="#E5E7EB"
            BorderBrush="#374151"
            Padding="12,8"
            CornerRadius="6"
            Margin="0,0,0,12"
            TextChanged="SearchBox_TextChanged"/>

        <!-- Memories List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MemoriesPanel" Spacing="12">
                <!-- Memory entries will be added here dynamically -->

                <!-- Empty state -->
                <Border
                    x:Name="EmptyState"
                    Background="#252525"
                    CornerRadius="8"
                    Padding="32"
                    Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                        <TextBlock
                            Text="ðŸ—‚ï¸"
                            FontSize="32"
                            HorizontalAlignment="Center"/>
                        <TextBlock
                            Text="No memories yet"
                            FontSize="14"
                            Foreground="#9CA3AF"
                            HorizontalAlignment="Center"/>
                        <TextBlock
                            Text="Memories will appear here as you interact with the assistant"
                            FontSize="11"
                            Foreground="#6B7280"
                            HorizontalAlignment="Center"
                            TextWrapping="Wrap"
                            TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
