<Window
    x:Class="SkynetCompanion.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Skynet Companion"
    Width="600"
    Height="400">

    <Grid Background="{ThemeResource SkynetBackgroundBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock
                Text="ðŸ¤– Skynet Companion"
                FontSize="32"
                FontWeight="Bold"
                Foreground="{ThemeResource SkynetTextBrush}"
                HorizontalAlignment="Center"/>

            <TextBlock
                Text="Running in background..."
                FontSize="16"
                Foreground="{ThemeResource SkynetTextBrush}"
                Opacity="0.7"
                HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Button
                    x:Name="ShowOverlayButton"
                    Content="Show Overlay"
                    Click="ShowOverlayButton_Click"
                    Background="{ThemeResource SkynetAccentBrush}"
                    Foreground="White"/>

                <Button
                    x:Name="SettingsButton"
                    Content="Settings"
                    Click="SettingsButton_Click"/>

                <Button
                    x:Name="ExitButton"
                    Content="Exit"
                    Click="ExitButton_Click"/>
            </StackPanel>

            <TextBlock
                Text="Hotkey: Ctrl+Space to activate voice"
                FontSize="12"
                Foreground="{ThemeResource SkynetTextBrush}"
                Opacity="0.5"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
