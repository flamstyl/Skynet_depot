# Claude DevBox Backend - Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
SANDBOX_IMAGE=devbox-sandbox:latest

# Claude API (for MCP integration)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=

# Google Gemini API (optional)
# IMPORTANT: DO NOT commit real API keys to Git!
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API (optional)
OPENAI_API_KEY=

# MCP Configuration
MCP_ENABLED=false
MCP_ENDPOINT=

# VM Configuration (optional)
VM_LINUX_ENABLED=false
VM_LINUX_SSH_PORT=2222
VM_LINUX_USER=devbox
VM_LINUX_PASSWORD=devbox

VM_WINDOWS_ENABLED=false
VM_WINDOWS_NAME=DevBox-Windows
VM_WINDOWS_USER=devbox
VM_WINDOWS_PASSWORD=devbox

# Workspace Paths
WORKSPACE_INPUT_DIR=../workspace/input
WORKSPACE_OUTPUT_DIR=../workspace/output
RUNS_DIR=../runs
LOGS_DIR=../logs

# Auto-Fix Settings
AUTOFIX_ENABLED=true
AUTOFIX_MAX_ATTEMPTS=5
AUTOFIX_TIMEOUT=60000

# Security
# IMPORTANT: Change these in production!
JWT_SECRET=change-me-in-production
SESSION_SECRET=change-me-in-production

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/devbox

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379

# Monitoring (optional)
# SENTRY_DSN=
# PROMETHEUS_ENABLED=false
