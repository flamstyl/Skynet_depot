/* ============================================
   Skynet Agent Launcher - Dark Theme
   ============================================ */

/* Global Styles */
QMainWindow {
    background-color: #1e1e1e;
    color: #e0e0e0;
}

QWidget {
    background-color: #1e1e1e;
    color: #e0e0e0;
    font-family: "Segoe UI", "Consolas", "Courier New", monospace;
    font-size: 10pt;
}

/* Labels */
QLabel {
    color: #e0e0e0;
    padding: 2px;
}

#agentListLabel {
    font-weight: bold;
    font-size: 11pt;
    padding: 8px;
    background-color: #2d2d2d;
    border-radius: 4px;
}

#agentNameLabel, #agentPathLabel, #agentTypeLabel, #agentStatusLabel {
    padding: 4px;
    font-size: 10pt;
}

/* Panels */
QFrame#leftPanel {
    background-color: #252525;
    border-right: 2px solid #3d3d3d;
}

QFrame#rightPanel {
    background-color: #1e1e1e;
}

QFrame#controlFrame {
    background-color: transparent;
}

/* Group Boxes */
QGroupBox {
    color: #9cdcfe;
    border: 1px solid #3d3d3d;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 8px;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 4px 8px;
    background-color: #2d2d2d;
    border-radius: 3px;
}

/* List Widget */
QListWidget {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 4px;
    padding: 4px;
    outline: none;
}

QListWidget::item {
    padding: 8px;
    border-radius: 3px;
    color: #e0e0e0;
}

QListWidget::item:hover {
    background-color: #3d3d3d;
}

QListWidget::item:selected {
    background-color: #0e639c;
    color: #ffffff;
    font-weight: bold;
}

QListWidget::item:selected:active {
    background-color: #1177bb;
}

/* Buttons */
QPushButton {
    background-color: #2d2d2d;
    color: #e0e0e0;
    border: 1px solid #3d3d3d;
    border-radius: 4px;
    padding: 8px 16px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #3d3d3d;
    border-color: #4d4d4d;
}

QPushButton:pressed {
    background-color: #1e1e1e;
    border-color: #5d5d5d;
}

QPushButton:disabled {
    background-color: #252525;
    color: #666666;
    border-color: #2d2d2d;
}

/* Start Button */
QPushButton#startButton {
    background-color: #0e7a0d;
    color: #ffffff;
    border-color: #0e7a0d;
}

QPushButton#startButton:hover {
    background-color: #10a010;
}

QPushButton#startButton:pressed {
    background-color: #0c5f0c;
}

/* Stop Button */
QPushButton#stopButton {
    background-color: #a80000;
    color: #ffffff;
    border-color: #a80000;
}

QPushButton#stopButton:hover {
    background-color: #c80000;
}

QPushButton#stopButton:pressed {
    background-color: #880000;
}

/* Refresh Button */
QPushButton#refreshButton {
    background-color: #0e639c;
    color: #ffffff;
}

QPushButton#refreshButton:hover {
    background-color: #1177bb;
}

/* Text Edit / Terminal */
QPlainTextEdit {
    background-color: #0c0c0c;
    color: #00ff00;
    border: 1px solid #3d3d3d;
    border-radius: 4px;
    padding: 8px;
    font-family: "Consolas", "Courier New", monospace;
    font-size: 9pt;
    selection-background-color: #264f78;
}

/* Scrollbars */
QScrollBar:vertical {
    background-color: #1e1e1e;
    width: 14px;
    border-radius: 0px;
}

QScrollBar::handle:vertical {
    background-color: #3d3d3d;
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background-color: #4d4d4d;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #1e1e1e;
    height: 14px;
}

QScrollBar::handle:horizontal {
    background-color: #3d3d3d;
    min-width: 20px;
    border-radius: 4px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #4d4d4d;
}

/* Menu Bar */
QMenuBar {
    background-color: #2d2d2d;
    color: #e0e0e0;
    border-bottom: 1px solid #3d3d3d;
}

QMenuBar::item {
    padding: 4px 12px;
    background-color: transparent;
}

QMenuBar::item:selected {
    background-color: #3d3d3d;
}

QMenuBar::item:pressed {
    background-color: #0e639c;
}

/* Menu */
QMenu {
    background-color: #2d2d2d;
    color: #e0e0e0;
    border: 1px solid #3d3d3d;
}

QMenu::item {
    padding: 6px 24px;
}

QMenu::item:selected {
    background-color: #0e639c;
}

/* Status Bar */
QStatusBar {
    background-color: #2d2d2d;
    color: #9cdcfe;
    border-top: 1px solid #3d3d3d;
}
