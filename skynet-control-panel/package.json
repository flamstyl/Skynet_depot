{
  "name": "skynet-control-panel",
  "version": "1.0.0",
  "description": "Interface centralisée Electron pour contrôler MCP Servers, Docker, n8n, Oracle Cloud",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && electron .",
    "electron:build": "npm run build && npm run build:electron && electron-builder"
  },
  "keywords": [
    "electron",
    "skynet",
    "devops",
    "dashboard",
    "mcp",
    "docker",
    "n8n",
    "oracle-cloud"
  ],
  "author": "Skynet Project",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "dockerode": "^4.0.2",
    "axios": "^1.7.9",
    "oci-sdk": "^2.94.0",
    "ws": "^8.18.0",
    "electron-store": "^10.0.0",
    "zustand": "^5.0.2",
    "@tanstack/react-query": "^5.62.7",
    "recharts": "^2.15.0",
    "lucide-react": "^0.468.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.28.9",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49"
  },
  "build": {
    "appId": "com.skynet.controlpanel",
    "productName": "Skynet Control Panel",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    }
  }
}
