{
  "server": {
    "mode": "stdio",
    "websocket": {
      "enabled": false,
      "port": 3740
    }
  },
  "shell": {
    "defaultShell": "auto",
    "shells": {
      "bash": "/bin/bash",
      "zsh": "/bin/zsh",
      "fish": "/bin/fish",
      "sh": "/bin/sh",
      "powershell": "powershell.exe",
      "cmd": "cmd.exe"
    },
    "env": {
      "TERM": "xterm-256color",
      "COLORTERM": "truecolor"
    }
  },
  "sessions": {
    "maxActiveSessions": 10,
    "inactivityTimeout": 1800000,
    "cleanupInterval": 300000,
    "persistState": true,
    "stateDir": "./data/sessions"
  },
  "security": {
    "enabled": true,
    "validateCommands": true,
    "whitelistMode": false,
    "allowedCommands": [],
    "forbiddenCommands": [
      "rm -rf /",
      "rm -rf /*",
      "mkfs",
      "dd if=/dev/zero",
      ":(){ :|:& };:",
      "chmod -R 777 /",
      "wget http://malicious",
      "curl http://malicious | sh"
    ],
    "forbiddenPaths": [
      "/etc/shadow",
      "/etc/passwd",
      "/boot",
      "/sys",
      "/proc/kcore"
    ],
    "maxCpuPercent": 80,
    "maxMemoryMb": 2048,
    "maxExecutionTime": 600000
  },
  "retry": {
    "enabled": true,
    "strategy": "exponential_backoff",
    "maxRetries": 3,
    "initialDelay": 1000,
    "maxDelay": 10000,
    "retryableExitCodes": [1, 127, 130]
  },
  "streaming": {
    "enabled": true,
    "bufferSize": 4096,
    "flushInterval": 100
  },
  "logging": {
    "level": "info",
    "file": "./data/logs/phoenixterm.log",
    "maxSize": "10m",
    "maxFiles": 5
  }
}
