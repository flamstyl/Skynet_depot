# ClipboardPro MCP - Environment Configuration

# API Server
PORT=3001
NODE_ENV=development

# MCP Server
MCP_MODE=http
MCP_SERVER_PORT=3002
MCP_SERVER_URL=http://localhost:3002
MCP_API_KEY=dev-key-change-in-production

# AI Configuration
AI_PROVIDER=claude
AI_PROMPTS_PATH=../../ai_prompts

# Database
DATABASE_PATH=../../data/history.db

# Sync Settings
DEVICE_ID=auto-generated-on-first-run
SYNC_ENABLED=false
SYNC_INTERVAL=60000

# OCR Settings
OCR_ENGINE=mock
OCR_LANGUAGE=eng

# Clipboard Settings
CLIPBOARD_MONITOR_INTERVAL=500
HISTORY_LIMIT=1000
AUTO_DELETE_DAYS=0

# Logging
LOG_LEVEL=info
