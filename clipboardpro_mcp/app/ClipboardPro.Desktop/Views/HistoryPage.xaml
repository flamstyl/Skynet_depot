<Page
    x:Class="ClipboardPro.Desktop.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundPrimary}">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0" Text="Clipboard History" Style="{StaticResource PageTitleStyle}"/>

        <!-- Toolbar -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox Grid.Column="0"
                    x:Name="SearchBox"
                    PlaceholderText="Search clipboard history..."
                    Width="400"
                    HorizontalAlignment="Left"
                    TextChanged="SearchBox_TextChanged">
                <TextBox.Resources>
                    <SolidColorBrush x:Key="TextControlBackground" Color="#1E293B"/>
                    <SolidColorBrush x:Key="TextControlForeground" Color="#F1F5F9"/>
                </TextBox.Resources>
            </TextBox>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                <ComboBox x:Name="FilterTypeComboBox"
                         PlaceholderText="All Types"
                         Width="150"
                         SelectionChanged="FilterType_SelectionChanged">
                    <ComboBoxItem Content="All Types" Tag="all"/>
                    <ComboBoxItem Content="Text" Tag="text"/>
                    <ComboBoxItem Content="Images" Tag="image"/>
                    <ComboBoxItem Content="Files" Tag="file"/>
                </ComboBox>

                <Button Content="Refresh" Click="Refresh_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{StaticResource BackgroundSecondary}"
                                   CornerRadius="4"
                                   Padding="16,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="16" Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Clear All" Click="ClearAll_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{StaticResource BackgroundSecondary}"
                                   CornerRadius="4"
                                   Padding="16,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{StaticResource DangerBrush}"/>
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- History List -->
        <ListView Grid.Row="2"
                 x:Name="HistoryListView"
                 SelectionMode="Single"
                 ItemClick="HistoryItem_Click"
                 IsItemClickEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <FontIcon Grid.Column="0"
                                         Glyph="{Binding TypeIcon}"
                                         FontSize="20"
                                         Foreground="{StaticResource PrimaryBrush}"
                                         Margin="0,0,12,0"/>

                                <TextBlock Grid.Column="1"
                                          Text="{Binding Type}"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource TextPrimary}"/>

                                <TextBlock Grid.Column="2"
                                          Text="{Binding CreatedAt}"
                                          Foreground="{StaticResource TextTertiary}"
                                          FontSize="12"/>
                            </Grid>

                            <!-- Content Preview -->
                            <TextBlock Grid.Row="1"
                                      Text="{Binding ContentPreview}"
                                      Foreground="{StaticResource TextSecondary}"
                                      MaxLines="2"
                                      TextWrapping="Wrap"
                                      TextTrimming="CharacterEllipsis"
                                      Margin="0,0,0,8"/>

                            <!-- Actions -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8">
                                <Button Content="Copy" FontSize="12" Padding="8,4"/>
                                <Button Content="Delete" FontSize="12" Padding="8,4"/>
                                <Button Content="OCR" FontSize="12" Padding="8,4" Visibility="{Binding IsImage}"/>
                                <Button Content="AI Transform" FontSize="12" Padding="8,4"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
