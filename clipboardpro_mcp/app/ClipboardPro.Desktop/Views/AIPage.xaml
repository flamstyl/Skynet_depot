<Page
    x:Class="ClipboardPro.Desktop.Views.AIPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundPrimary}">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="AI Transformations" Style="{StaticResource PageTitleStyle}"/>
            <TextBlock Text="Transform your clipboard content with AI"
                      Foreground="{StaticResource TextSecondary}"
                      FontSize="14"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- AI Actions -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Select Action" Style="{StaticResource SectionTitleStyle}"/>

                    <GridView Grid.Row="1" SelectionMode="Single" x:Name="ActionGridView">
                        <!-- Rewrite -->
                        <Border Style="{StaticResource CardStyle}"
                               Width="250"
                               Height="120"
                               Margin="0,0,12,0"
                               Tag="rewrite">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                                    <FontIcon Glyph="&#xE70F;" FontSize="24" Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="Rewrite" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1"
                                          Text="Rewrite text in different styles"
                                          Foreground="{StaticResource TextSecondary}"
                                          FontSize="12"
                                          Margin="0,8,0,0"
                                          TextWrapping="Wrap"/>
                            </Grid>
                        </Border>

                        <!-- Translate -->
                        <Border Style="{StaticResource CardStyle}"
                               Width="250"
                               Height="120"
                               Margin="0,0,12,0"
                               Tag="translate">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                                    <FontIcon Glyph="&#xF2B7;" FontSize="24" Foreground="{StaticResource SecondaryBrush}"/>
                                    <TextBlock Text="Translate" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1"
                                          Text="Translate to any language"
                                          Foreground="{StaticResource TextSecondary}"
                                          FontSize="12"
                                          Margin="0,8,0,0"
                                          TextWrapping="Wrap"/>
                            </Grid>
                        </Border>

                        <!-- Summarize -->
                        <Border Style="{StaticResource CardStyle}"
                               Width="250"
                               Height="120"
                               Margin="0,0,12,0"
                               Tag="summarize">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                                    <FontIcon Glyph="&#xE8C3;" FontSize="24" Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock Text="Summarize" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1"
                                          Text="Create concise summaries"
                                          Foreground="{StaticResource TextSecondary}"
                                          FontSize="12"
                                          Margin="0,8,0,0"
                                          TextWrapping="Wrap"/>
                            </Grid>
                        </Border>

                        <!-- Clean -->
                        <Border Style="{StaticResource CardStyle}"
                               Width="250"
                               Height="120"
                               Tag="clean">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                                    <FontIcon Glyph="&#xE90F;" FontSize="24" Foreground="{StaticResource SuccessBrush}"/>
                                    <TextBlock Text="Clean" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1"
                                          Text="Clean and format text"
                                          Foreground="{StaticResource TextSecondary}"
                                          FontSize="12"
                                          Margin="0,8,0,0"
                                          TextWrapping="Wrap"/>
                            </Grid>
                        </Border>
                    </GridView>
                </Grid>
            </Border>

            <!-- Input/Output Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Input -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Input Text" Style="{StaticResource SectionTitleStyle}"/>

                        <!-- Options -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
                            <ComboBox x:Name="StyleComboBox"
                                     PlaceholderText="Style"
                                     Width="150"
                                     Visibility="Collapsed">
                                <ComboBoxItem Content="Professional" Tag="professional"/>
                                <ComboBoxItem Content="Casual" Tag="casual"/>
                                <ComboBoxItem Content="Formal" Tag="formal"/>
                            </ComboBox>

                            <ComboBox x:Name="TargetLanguageComboBox"
                                     PlaceholderText="Target Language"
                                     Width="150"
                                     Visibility="Collapsed">
                                <ComboBoxItem Content="French" Tag="fr"/>
                                <ComboBoxItem Content="Spanish" Tag="es"/>
                                <ComboBoxItem Content="German" Tag="de"/>
                                <ComboBoxItem Content="Japanese" Tag="ja"/>
                            </ComboBox>

                            <ComboBox x:Name="LengthComboBox"
                                     PlaceholderText="Length"
                                     Width="150"
                                     Visibility="Collapsed">
                                <ComboBoxItem Content="Short" Tag="short"/>
                                <ComboBoxItem Content="Medium" Tag="medium"/>
                                <ComboBoxItem Content="Long" Tag="long"/>
                            </ComboBox>
                        </StackPanel>

                        <TextBox Grid.Row="2"
                                x:Name="InputTextBox"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                PlaceholderText="Enter or paste text here...">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBackground" Color="#1E293B"/>
                                <SolidColorBrush x:Key="TextControlForeground" Color="#F1F5F9"/>
                            </TextBox.Resources>
                        </TextBox>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                            <Button Content="Load from Clipboard" Click="LoadFromClipboard_Click"/>
                            <Button Content="Load from History" Click="LoadFromHistoryAI_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Output -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Result" Style="{StaticResource SectionTitleStyle}"/>

                        <!-- Status -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                            <FontIcon x:Name="StatusIcon" Glyph="&#xE73E;" FontSize="14" Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock x:Name="StatusText"
                                      Text="Ready"
                                      Foreground="{StaticResource TextSecondary}"
                                      FontSize="12"/>
                        </StackPanel>

                        <TextBox Grid.Row="2"
                                x:Name="OutputTextBox"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                IsReadOnly="True"
                                PlaceholderText="AI result will appear here...">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBackground" Color="#1E293B"/>
                                <SolidColorBrush x:Key="TextControlForeground" Color="#F1F5F9"/>
                            </TextBox.Resources>
                        </TextBox>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                            <Button Content="Process" Click="ProcessAI_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{StaticResource PrimaryBrush}"
                                               CornerRadius="4"
                                               Padding="20,10">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE946;" FontSize="16" Foreground="White"/>
                                                <TextBlock Text="{TemplateBinding Content}" Foreground="White" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="Copy to Clipboard" Click="CopyAIResult_Click"/>
                            <Button Content="Clear" Click="ClearAI_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
