# QuickLauncher MCP Environment Configuration
# Copy this file to .env and configure as needed

# Backend Server
BACKEND_PORT=8765
BACKEND_HOST=127.0.0.1

# MCP Server
MCP_PORT=3000
MCP_HOST=127.0.0.1
MCP_CHANNEL=skynet_quicklauncher

# AI Configuration
AI_BACKEND=claude_cli  # Options: claude_cli, gemini_cli, api
ANTHROPIC_API_KEY=     # Your Anthropic API key (if using API)
OPENAI_API_KEY=        # Your OpenAI API key (if using API)
GEMINI_API_KEY=        # Your Gemini API key (if using API)

# Database
DATABASE_PATH=./data/index.db

# Logging
LOG_LEVEL=info  # Options: debug, info, warning, error
LOG_FILE=./logs/quicklauncher.log

# Features
ENABLE_MCP_SYNC=true
ENABLE_AI_MODE=true
ENABLE_PLUGINS=true
ENABLE_TELEMETRY=false

# Device
DEVICE_ID=  # Auto-generated on first run, leave blank

# Development
DEBUG_MODE=false
DEV_TOOLS=false
