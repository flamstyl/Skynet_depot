<Page x:Class="SentinelleMCP.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Title -->
            <TextBlock Text="Dashboard" Style="{StaticResource SkynetTitle}" Margin="0,0,0,20"/>

            <!-- Status Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Watchers Card -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘ï¸" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Active Watchers" FontSize="14" HorizontalAlignment="Center" Foreground="#B0B0B0"/>
                        <TextBlock x:Name="ActiveWatchersCount" Text="0" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource SkynetPurple}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Events Card -->
                <materialDesign:Card Grid.Column="1" Margin="5,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Total Events" FontSize="14" HorizontalAlignment="Center" Foreground="#B0B0B0"/>
                        <TextBlock x:Name="TotalEventsCount" Text="0" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#4CAF50"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- AI Analyses Card -->
                <materialDesign:Card Grid.Column="2" Margin="5,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ¤–" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="AI Analyses" FontSize="14" HorizontalAlignment="Center" Foreground="#B0B0B0"/>
                        <TextBlock x:Name="AIAnalysesCount" Text="0" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2196F3"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Reports Card -->
                <materialDesign:Card Grid.Column="3" Margin="10,0,0,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Reports" FontSize="14" HorizontalAlignment="Center" Foreground="#B0B0B0"/>
                        <TextBlock x:Name="ReportsCount" Text="0" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#FF9800"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Recent Events -->
            <TextBlock Text="Recent Events" Style="{StaticResource SectionTitle}" Margin="0,30,0,10"/>

            <materialDesign:Card Padding="0">
                <DataGrid x:Name="RecentEventsGrid"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         HeadersVisibility="Column"
                         GridLinesVisibility="None"
                         CanUserResizeRows="False"
                         CanUserSortColumns="True"
                         AlternatingRowBackground="#2D2D30"
                         Background="Transparent"
                         MaxHeight="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="Auto"/>
                        <DataGridTextColumn Header="Event" Binding="{Binding EventType}" Width="Auto"/>
                        <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="Auto"/>
                        <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>

            <!-- Watchers Status -->
            <TextBlock Text="Watchers Status" Style="{StaticResource SectionTitle}" Margin="0,30,0,10"/>

            <materialDesign:Card Padding="20">
                <StackPanel>
                    <ItemsControl x:Name="WatchersStatusList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="â—" FontSize="16" Margin="0,0,10,0" Foreground="#4CAF50"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Path}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding EventsCount}" VerticalAlignment="Center" Foreground="#B0B0B0"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </materialDesign:Card>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Refresh" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,10,0" Click="RefreshButton_Click"/>
                <Button Content="Clear Events" Style="{StaticResource MaterialDesignOutlinedButton}" Click="ClearEventsButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
