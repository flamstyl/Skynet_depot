<Application x:Class="SentinelleMCP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

                <!-- Custom Resources -->
                <ResourceDictionary>
                    <!-- Colors -->
                    <SolidColorBrush x:Key="SkynetPurple" Color="#9C27B0"/>
                    <SolidColorBrush x:Key="BackgroundDark" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="SurfaceDark" Color="#2D2D30"/>

                    <!-- Fonts -->
                    <FontFamily x:Key="MonoFont">Consolas, Courier New</FontFamily>

                    <!-- Styles -->
                    <Style x:Key="SkynetTitle" TargetType="TextBlock">
                        <Setter Property="FontSize" Value="24"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="{StaticResource SkynetPurple}"/>
                    </Style>

                    <Style x:Key="SectionTitle" TargetType="TextBlock">
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Margin" Value="0,10,0,5"/>
                    </Style>

                    <Style x:Key="MonoText" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource MonoFont}"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
