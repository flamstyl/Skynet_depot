<Page
    x:Class="TaskFlow.Desktop.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <StackPanel Spacing="24" MaxWidth="600" HorizontalAlignment="Left">

            <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" />

            <!-- API Configuration -->
            <StackPanel Spacing="12">
                <TextBlock Text="API Configuration" FontSize="18" FontWeight="SemiBold" />

                <TextBox
                    x:Name="ApiUrlTextBox"
                    Header="TaskFlow API URL"
                    PlaceholderText="http://localhost:5000"
                    Text="http://localhost:5000" />

                <Button Content="Test Connection" Click="TestConnection_Click" />
            </StackPanel>

            <!-- Sources Configuration -->
            <StackPanel Spacing="12">
                <TextBlock Text="Integration Sources" FontSize="18" FontWeight="SemiBold" />

                <ToggleSwitch Header="Gmail" IsOn="True" />
                <ToggleSwitch Header="GitHub" IsOn="True" />
                <ToggleSwitch Header="Trello" IsOn="True" />
                <ToggleSwitch Header="Notion" IsOn="False" />
                <ToggleSwitch Header="Slack" IsOn="False" />
            </StackPanel>

            <!-- Theme -->
            <StackPanel Spacing="12">
                <TextBlock Text="Appearance" FontSize="18" FontWeight="SemiBold" />

                <ComboBox
                    Header="Theme"
                    SelectedIndex="0"
                    Width="200"
                    HorizontalAlignment="Left">
                    <x:String>Dark</x:String>
                    <x:String>Light</x:String>
                    <x:String>System</x:String>
                </ComboBox>
            </StackPanel>

            <!-- Pomodoro Settings -->
            <StackPanel Spacing="12">
                <TextBlock Text="Pomodoro Settings" FontSize="18" FontWeight="SemiBold" />

                <NumberBox
                    Header="Work Duration (minutes)"
                    Value="25"
                    Minimum="1"
                    Maximum="60"
                    SpinButtonPlacementMode="Inline"
                    Width="200"
                    HorizontalAlignment="Left" />

                <NumberBox
                    Header="Break Duration (minutes)"
                    Value="5"
                    Minimum="1"
                    Maximum="30"
                    SpinButtonPlacementMode="Inline"
                    Width="200"
                    HorizontalAlignment="Left" />

                <ToggleSwitch Header="Desktop Notifications" IsOn="True" />
            </StackPanel>

            <!-- Save Button -->
            <Button Content="Save Settings" Style="{ThemeResource AccentButtonStyle}" Click="SaveSettings_Click" />

        </StackPanel>
    </Grid>
</Page>
