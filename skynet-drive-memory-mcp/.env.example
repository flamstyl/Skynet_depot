# Configuration Skynet Drive Memory MCP

# Google Drive OAuth2
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback

# Credentials storage
CREDENTIALS_PATH=./credentials/tokens.json

# Embedding mode: "cloudflare" ou "local"
EMBEDDING_MODE=local

# Cloudflare Workers AI (si EMBEDDING_MODE=cloudflare)
CLOUDFLARE_API_KEY=your_cloudflare_api_key
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_MODEL=@cf/baai/bge-base-en-v1.5

# Cache
CACHE_DIR=./cache
CACHE_EMBEDDINGS=true

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/skynet-drive-memory-mcp.log

# Limites
MAX_FILE_SIZE_MB=50
MAX_FILES_TO_SCAN=1000
