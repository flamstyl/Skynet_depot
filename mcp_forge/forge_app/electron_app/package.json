{
  "name": "mcp-forge",
  "version": "1.0.0",
  "description": "Skynet Agent Builder - Visual AI Agent Construction System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "skynet",
    "ai-agents",
    "visual-builder",
    "mcp",
    "claude",
    "agent-construction"
  ],
  "author": "Skynet OS",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "js-yaml": "^4.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.skynet.mcp-forge",
    "productName": "MCP Forge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    }
  }
}
